// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client" // Add this line
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Add this if you're using Accelerate
}

model Account {
  id                String  @id @default(cuid())
  userId            Int     
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DepartmentInfo {
  id           String             @id @default(cuid())
  name         String             @unique
  description  String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  subdivisions SubdivisionInfo[]
  // Remove the users relation
}

model SubdivisionInfo {
  id             String         @id @default(cuid())
  name           String
  description    String?
  departmentId   String
  department     DepartmentInfo @relation(fields: [departmentId], references: [id])
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  @@unique([name, departmentId])
}

enum RnRStatus {
  RNR_ADMINISTRATION
  RNR_STAFF
  RNR_MEMBER
  NONE
}

enum Department {
  BSFR
  BSO
  MPD
  FHP
  COMMS
  MEDIA
  FWC
  CIV
  FDLE
  DEV
  RNR
  LEADERSHIP
  N_A
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  needsOnboarding Boolean @default(false)
  bio           String?   @db.Text
  status        String?
  role          Role      @default(APPLICANT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastActive    DateTime?
  rank          String?   @db.VarChar(30)
  department    Department? @default(N_A)
  rnrStatus     RnRStatus?  @default(NONE)
  discordId     String?     @unique
  accounts      Account[]
  sessions      Session[]
  threads       Thread[]
  posts         Post[]
  reactions     Reaction[]
  followers     Follow[]    @relation("following")
  following     Follow[]    @relation("follower")
  messages      Message[]   @relation("sender")
  receivedMessages Message[] @relation("recipient")
  notifications Notification[] @relation("recipient")
  isBanned Boolean @default(false)
  submittedApplications Application[]
  reviewedApplications  Application[]    @relation("reviewer")
  applicationNotes      ApplicationNote[]
  // New relation for review board members
  reviewBoards         ApplicationReviewBoard[] @relation("reviewBoardMember")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id            Int      @id @default(autoincrement()) 
  name          String
  description   String?  @db.Text
  slug          String   @unique
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isAnnouncement Boolean  @default(false)
  minRole       Role     @default(APPLICANT)
  threads       Thread[]
}

model Thread {
  id          Int      @id @default(autoincrement()) 
  title       String
  slug        String   @unique
  content     String   @db.Text
  published   Boolean  @default(true)
  pinned      Boolean  @default(false)
  locked      Boolean  @default(false)
  authorId    Int      
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categoryId  Int      
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  posts       Post[]
  reactions   Reaction[]
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          Int      @id @default(autoincrement())
  content     String   @db.Text
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  threadId    Int
  thread      Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  reactions   Reaction[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reaction {
  id        Int      @id @default(autoincrement())
  type      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  threadId  Int?
  thread    Thread?  @relation(fields: [threadId], references: [id], onDelete: Cascade)
  postId    Int?
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, threadId, postId, type])
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int
  follower    User     @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  followingId Int
  following   User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model Message {
  id          Int      @id @default(autoincrement())
  content     String   @db.Text
  read        Boolean  @default(false)
  senderId    Int
  sender      User     @relation("sender", fields: [senderId], references: [id], onDelete: Cascade)
  recipientId Int
  recipient   User     @relation("recipient", fields: [recipientId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id          Int      @id @default(autoincrement())
  type        String
  message     String
  read        Boolean  @default(false)
  recipientId Int
  recipient   User     @relation("recipient", fields: [recipientId], references: [id], onDelete: Cascade)
  link        String?
  createdAt   DateTime @default(now())
}

model AnonymousSession {
  id        String   @id @default(cuid())
  ip        String
  userAgent String?
  createdAt DateTime @default(now())
  lastSeen  DateTime @default(now())

  @@map("anonymous_sessions")
}

enum Role {
  WEBMASTER         // None
  HEAD_ADMIN        // Cyan
  SENIOR_ADMIN      // Dark Purple
  SPECIAL_ADVISOR   // Dark Blue
  ADMIN             // Dark Red
  JUNIOR_ADMIN      // Light Blue
  SENIOR_STAFF      // Dark Green
  STAFF             // Yellow
  STAFF_IN_TRAINING // Light Red
  MEMBER            // Light Blue
  APPLICANT         // Grey (default)
}

// Application Templates
model ApplicationTemplate {
  id            Int                  @id @default(autoincrement())
  departmentId  String               // Maps to Department enum
  name          String
  description   String?              @db.Text
  active        Boolean              @default(true)
  requiresInterview Boolean          @default(false) // New field for interview requirement
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  questions     ApplicationQuestion[]
  applications  Application[]
  reviewBoard   ApplicationReviewBoard?
}

// New model for application review board
model ApplicationReviewBoard {
  id                Int                @id @default(autoincrement())
  templateId        Int                @unique
  template          ApplicationTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  members           User[]             @relation("reviewBoardMember")
  discordRoleIds    String?            @db.Text // Comma-separated list of Discord role IDs
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

// Questions for templates
model ApplicationQuestion {
  id                  Int                @id @default(autoincrement())
  templateId          Int
  template            ApplicationTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  questionText        String             @db.Text
  questionType        String             // text, textarea, select, radio, checkbox
  required            Boolean            @default(true)
  order               Int
  options             Json?              // For select, radio, checkbox types
  responses           ApplicationResponse[]
  isDiscordIdField    Boolean            @default(false) // New field to mark Discord ID questions
}

// Submitted applications
model Application {
  id                  Int                @id @default(autoincrement())
  userId              Int
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  templateId          Int
  template            ApplicationTemplate @relation(fields: [templateId], references: [id])
  status              ApplicationStatus  @default(PENDING)
  reviewerId          Int?               // R&R member reviewing this application
  reviewer            User?              @relation("reviewer", fields: [reviewerId], references: [id])
  denialCount         Int                @default(0)
  lastDeniedAt        DateTime?
  cooldownUntil       DateTime?
  interviewStatus     InterviewStatus?
  interviewCompletedAt DateTime?
  interviewFailedAt   DateTime?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  responses           ApplicationResponse[]
  notes               ApplicationNote[]
}

// Individual question responses
model ApplicationResponse {
  id                  Int                @id @default(autoincrement())
  applicationId       Int
  application         Application        @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  questionId          Int
  question            ApplicationQuestion @relation(fields: [questionId], references: [id])
  response            String             @db.Text
  flaggedAsAI         Boolean            @default(false)
}

// Notes added by reviewers
model ApplicationNote {
  id                  Int                @id @default(autoincrement())
  applicationId       Int
  application         Application        @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  authorId            Int
  author              User               @relation(fields: [authorId], references: [id])
  content             String             @db.Text
  createdAt           DateTime           @default(now())
}

// Application status enum
enum ApplicationStatus {
  PENDING
  ACCEPTED
  DENIED
  COMPLETED
  CANCELLED
}

// Interview status enum
enum InterviewStatus {
  AWAITING_INTERVIEW
  INTERVIEW_COMPLETED
  INTERVIEW_FAILED
}
