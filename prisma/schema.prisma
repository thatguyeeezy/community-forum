generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AnonymousSession {
  id        String   @id @default(cuid())
  ip        String
  userAgent String?
  createdAt DateTime @default(now())
  lastSeen  DateTime @default(now())

  @@map("anonymous_sessions")
}

model account {
  id                String  @id
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              user    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Account_userId_fkey")

  @@unique([provider, providerAccountId], map: "Account_provider_providerAccountId_key")
  @@index([userId], map: "Account_userId_fkey")
}

model category {
  id             Int              @id @default(autoincrement())
  name           String
  description    String?          @db.Text
  slug           String           @unique(map: "Category_slug_key")
  order          Int              @default(0)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  isAnnouncement Boolean          @default(false)
  minRole        category_minRole @default(APPLICANT)
  thread         thread[]
}

model departmentinfo {
  id              String            @id
  name            String            @unique(map: "DepartmentInfo_name_key")
  description     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  subdivisioninfo subdivisioninfo[]
  user            user[]
}

model follow {
  id                            Int      @id @default(autoincrement())
  followerId                    Int
  followingId                   Int
  createdAt                     DateTime @default(now())
  user_follow_followerIdTouser  user     @relation("follow_followerIdTouser", fields: [followerId], references: [id], onDelete: Cascade, map: "Follow_followerId_fkey")
  user_follow_followingIdTouser user     @relation("follow_followingIdTouser", fields: [followingId], references: [id], onDelete: Cascade, map: "Follow_followingId_fkey")

  @@unique([followerId, followingId], map: "Follow_followerId_followingId_key")
  @@index([followingId], map: "Follow_followingId_fkey")
}

model message {
  id                             Int      @id @default(autoincrement())
  content                        String   @db.Text
  read                           Boolean  @default(false)
  senderId                       Int
  recipientId                    Int
  createdAt                      DateTime @default(now())
  updatedAt                      DateTime
  user_message_recipientIdTouser user     @relation("message_recipientIdTouser", fields: [recipientId], references: [id], onDelete: Cascade, map: "Message_recipientId_fkey")
  user_message_senderIdTouser    user     @relation("message_senderIdTouser", fields: [senderId], references: [id], onDelete: Cascade, map: "Message_senderId_fkey")

  @@index([recipientId], map: "Message_recipientId_fkey")
  @@index([senderId], map: "Message_senderId_fkey")
}

model notification {
  id          Int      @id @default(autoincrement())
  type        String
  message     String
  read        Boolean  @default(false)
  recipientId Int
  link        String?
  createdAt   DateTime @default(now())
  user        user     @relation(fields: [recipientId], references: [id], onDelete: Cascade, map: "Notification_recipientId_fkey")

  @@index([recipientId], map: "Notification_recipientId_fkey")
}

model post {
  id        Int        @id @default(autoincrement())
  content   String     @db.Text
  authorId  Int
  threadId  Int
  createdAt DateTime   @default(now())
  updatedAt DateTime
  user      user       @relation(fields: [authorId], references: [id], onDelete: Cascade, map: "Post_authorId_fkey")
  thread    thread     @relation(fields: [threadId], references: [id], onDelete: Cascade, map: "Post_threadId_fkey")
  reaction  reaction[]

  @@index([authorId], map: "Post_authorId_fkey")
  @@index([threadId], map: "Post_threadId_fkey")
}

model reaction {
  id        Int      @id @default(autoincrement())
  type      String
  userId    Int
  threadId  Int?
  postId    Int?
  createdAt DateTime @default(now())
  post      post?    @relation(fields: [postId], references: [id], onDelete: Cascade, map: "Reaction_postId_fkey")
  thread    thread?  @relation(fields: [threadId], references: [id], onDelete: Cascade, map: "Reaction_threadId_fkey")
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Reaction_userId_fkey")

  @@unique([userId, threadId, postId, type], map: "Reaction_userId_threadId_postId_type_key")
  @@index([postId], map: "Reaction_postId_fkey")
  @@index([threadId], map: "Reaction_threadId_fkey")
}

model session {
  id           String   @id
  sessionToken String   @unique(map: "Session_sessionToken_key")
  userId       Int
  expires      DateTime
  user         user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Session_userId_fkey")

  @@index([userId], map: "Session_userId_fkey")
}

model subdivisioninfo {
  id             String         @id
  name           String
  description    String?
  departmentId   String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  departmentinfo departmentinfo @relation(fields: [departmentId], references: [id], map: "SubdivisionInfo_departmentId_fkey")

  @@unique([name, departmentId], map: "SubdivisionInfo_name_departmentId_key")
  @@index([departmentId], map: "SubdivisionInfo_departmentId_fkey")
}

model thread {
  id         Int        @id @default(autoincrement())
  title      String
  slug       String     @unique(map: "Thread_slug_key")
  content    String     @db.Text
  published  Boolean    @default(true)
  pinned     Boolean    @default(false)
  locked     Boolean    @default(false)
  authorId   Int
  categoryId Int
  views      Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime
  post       post[]
  reaction   reaction[]
  user       user       @relation(fields: [authorId], references: [id], onDelete: Cascade, map: "Thread_authorId_fkey")
  category   category   @relation(fields: [categoryId], references: [id], onDelete: Cascade, map: "Thread_categoryId_fkey")

  @@index([authorId], map: "Thread_authorId_fkey")
  @@index([categoryId], map: "Thread_categoryId_fkey")
}

model user {
  id                                Int              @id @default(autoincrement())
  name                              String?
  email                             String?          @unique(map: "User_email_key")
  emailVerified                     DateTime?
  password                          String?
  image                             String?
  bio                               String?          @db.Text
  status                            String?
  role                              user_role        @default(APPLICANT)
  createdAt                         DateTime         @default(now())
  updatedAt                         DateTime
  lastActive                        DateTime?
  department                        user_department? @default(N_A)
  discordId                         String?          @unique(map: "User_discordId_key")
  rank                              String?          @db.VarChar(30)
  rnrStatus                         user_rnrStatus?  @default(NONE)
  departmentInfoId                  String?
  account                           account[]
  follow_follow_followerIdTouser    follow[]         @relation("follow_followerIdTouser")
  follow_follow_followingIdTouser   follow[]         @relation("follow_followingIdTouser")
  message_message_recipientIdTouser message[]        @relation("message_recipientIdTouser")
  message_message_senderIdTouser    message[]        @relation("message_senderIdTouser")
  notification                      notification[]
  post                              post[]
  reaction                          reaction[]
  session                           session[]
  thread                            thread[]
  departmentinfo                    departmentinfo?  @relation(fields: [departmentInfoId], references: [id], map: "User_departmentInfoId_fkey")

  @@index([departmentInfoId], map: "User_departmentInfoId_fkey")
}

model verificationtoken {
  identifier String
  token      String   @unique(map: "VerificationToken_token_key")
  expires    DateTime

  @@unique([identifier, token], map: "VerificationToken_identifier_token_key")
}

enum category_minRole {
  HEAD_ADMIN
  SENIOR_ADMIN
  ADMIN
  JUNIOR_ADMIN
  SENIOR_STAFF
  STAFF
  STAFF_IN_TRAINING
  MEMBER
  APPLICANT
}

enum user_role {
  HEAD_ADMIN
  SENIOR_ADMIN
  ADMIN
  JUNIOR_ADMIN
  SENIOR_STAFF
  STAFF
  STAFF_IN_TRAINING
  MEMBER
  APPLICANT
}

enum user_department {
  BSFR
  BSO
  MPD
  FHP
  COMMS
  FWC
  CIV
  FDLE
  DEV
  RNR
  LEADERSHIP
  N_A
}

enum user_rnrStatus {
  RNR_ADMINISTRATION
  RNR_STAFF
  RNR_MEMBER
  NONE
}
